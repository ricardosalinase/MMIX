<h1>Lista de efectos</h1>
<div class="CSSTableGenerator" >
<table>
  <tr>
    <th>Nombre</th>
    <th>Comentario</th>
    <th>Propietario</th>
  </tr>

<% @effects.each do |effect| %>
  <tr>
    <!--td><%= link_to 'Show', effect %></td-->
	<td><%= effect.title %></td>
    <td><%= effect.content %></td>
    <td><%= link_to effect.user.email, user_path(effect.user) %></td>
  	<td><%= link_to 'Ver', effect %></td>
	<% if user_signed_in? and current_user == effect.user %>
    	<td><%= link_to 'Editar', edit_effect_path(effect) %></td>
 	    <td><%= link_to 'Eliminar', effect, confirm: 'Seguro?', method: :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>
<br />
</div>
<% if user_signed_in? %>
	<%= link_to 'Subir efecto nuevo', new_effect_path %> |
	<%= link_to 'home', root_path %>
<% else %>
	<%= link_to 'home', root_path %>
<% end %>

